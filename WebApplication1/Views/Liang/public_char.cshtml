@model PublicCharModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>public_char</title>
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/javascript/vue-2.4.0.js"></script>


</head>
<body>
    <div id="div123">
     
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--公共属性设置
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="button" value="添加" class="BUTTON_STYLE1"
                                v-on:click="insert">
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="49%" class="TD_STYLE1">
                        属性种类
                    </td>
                    <td width="44%" class="TD_STYLE1">
                        属性名称
                    </td>
                    <td width="7%" class="TD_STYLE1" align="center">
                        删除
                    </td>
                </tr>

                <tr v-for="(item,index) in nums">
                    <td class="TD_STYLE2">
                        {{item.Ptype}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.PName}}
                    </td>
                    <td class="TD_STYLE2">
                        <a v-on:click="Deleteone(item.PID)">删除</a>
                    </td>
                </tr>
               


            </table>
            <p>

         
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#div123",
            data: {
                nums:""
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/Liang/SelectPublicChar",
                        type:"post",
                        success: function (msg) {
                            var dt = eval("(" + msg + ")");
                            t.nums = dt;
                        }
                    })
                },
                
                insert() {
                    location.href = '../Liang/public_char_add';
                },
                Deleteone(oneID) {
                    if (confirm("确认要删除吗？")) {
                        var t = this;
                        $.ajax({
                            url: "/Liang/DeletePublic?id=" + oneID,
                            type: "post",
                            success: function (msg) {
                                var dt = eval("(" + msg + ")");
                                if (dt > 0) {
                                    alert("删除成功");
                                    location.href = '../Liang/public_char';
                                } else {
                                    alert("删除失败");
                                }
                            }
                        })
                    }

                }
            },
            created: function () {
                this.load();
            }
        })
    </script>
</body>
</html>
