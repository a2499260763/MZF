@model threeorganizationModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SelectWherethree</title>
    <link href="~/Css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" >
        $(function(){
        if("@Model.threeCodepd"=="是"){
            $("#threeCodepd").children().first().attr("selected", "selected");
        } else {
            $("#threeCodepd").children().last().attr("selected", "selected");
        }
        })
    </script>
</head>
<body>
    <div> 
        @using (Html.BeginForm("InsertthreeWhere", "threeorganization", FormMethod.Post))
        {
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--III级机构设置--III级机构变更
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="提交" class="BUTTON_STYLE1">
                    <input type="button" value="返回" class="BUTTON_STYLE1">
                </td>
            </tr>
        </table>

        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">

            <tr>
                <td width="19%" class="TD_STYLE1">
                    @Html.Hidden("threeID", Model.threeID, new { @readonly = "readonly", @class = "INPUT_STYLE1" })
                    @Html.Label("I级机构名称")
                </td>
                <td width="81%" class="TD_STYLE2">
                    @Html.TextBox("oneName",Model.oneName, new { @readonly = "readonly", @class = "INPUT_STYLE1" })
                    
                </td>
            </tr>
            <tr>
                <td width="19%" class="TD_STYLE1">
                    @Html.Label("II级机构名称")
                    
                </td>
                <td width="81%" class="TD_STYLE2">
                    
                    @Html.TextBox("twoCodeName", Model.twoCodeName, new { @readonly = "readonly", @class = "INPUT_STYLE1" })
                </td>
            </tr>
            <tr>
                <td width="19%" class="TD_STYLE1">
                    @Html.Label("III级机构编号")
                    
                </td>
                <td width="81%" class="TD_STYLE2">
                    @Html.TextBox("threeCode", Model.threeCode, new { @readonly = "readonly", @class = "INPUT_STYLE1" })
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    @Html.Label("III级机构名称")
                    
                </td>
                <td class="TD_STYLE2">
                    @Html.TextBox("threeCodeName", Model.threeCodeName, new { @readonly = "readonly", @class = "INPUT_STYLE1" })
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    @Html.Label("销售责任人编号（多个编号之间请用'半角逗号'加'一个空格'隔开，如', '）")
                    
                </td>
                <td class="TD_STYLE2">
                    @Html.TextBox("threeCodemarket", Model.threeCodemarket, new { @style = "height:80px", @class = "TEXTAREA_STYLE1" })
                    @Html.ValidationMessage("threeCodemarket")
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    @Html.Label("是否为零售店（是/否）")
                    
                </td>
                <td class="TD_STYLE2">
                    @*@Html.RadioButton("threeCodepd", "true", Model.threeCodepd)是
                    @Html.RadioButton("threeCodepd", "false", Model.threeCodepd == false ? true : false)否*@
                    <select id="threeCodepd" name="threeCodepd">
                        <option id="yes" value="是">是</option>
                        <option id="no" value="否">否</option>
                    </select>
                </td>
            </tr>
        </table>
        }
    </div>
</body>
</html>
