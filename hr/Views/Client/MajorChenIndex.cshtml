
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MajorChenIndex</title>
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/vue-2.4.0.js"></script>
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
</head>
<body>
    <div id="zc">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职称设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right"></td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="80%" class="TD_STYLE1">
                    职称名称
                </td>
                <td width="20%" class="TD_STYLE1" align="center">
                    操作
                </td>
            </tr>
            <tr v-for="(item,i) in nums">
                <td class="TD_STYLE2">{{item.CName}}</td>
                <td class="TD_STYLE2" align="center">
                    <a style="cursor:pointer" v-on:click="dele(item.Id)">删除</a>
                </td>
            </tr>

        </table>
        <p>
</div>
    <script type="text/javascript">
        
        var vm = new Vue({
            el: "#zc", //绑定标签
            data: {
                nums: ""  //数据传递
            },
            methods: {
                //函数集
                load: function () {
                    //把控制层赋值给t
                    var t = this;
                    $.ajax({
                        url: "/Client/MajorChenIndex2",
                        type: "post",
                        data: "",
                        success: function (msg) {
                            t.nums = eval("" + msg + "");
                        }
                    });
                },
                dele: function (Id) {
                    if (confirm("确定要删除吗？")) {
                        var t = this;
                        $.ajax({
                            url: "/Client/MajorChenDele",
                            type: "post",
                            data: "Id=" + Id,
                            success: function (msg) {
                                if (eval("" + msg + "")>0) {
                                    alert("删除成功")
                                    t.load();
                                } else {
                                    alert("删除失败")
                                }
                               
                            }
                        });
                    }
                   
                }
            },
            created: function () {   //页面加载方法
               
                this.load();
            }
        });
    </script>
</body>
</html>
